<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_normal">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="昵称"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:lines="1"
        android:layout_marginEnd="@dimen/margin_normal"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/tv_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_name"
        android:textSize="10sp"
        android:text="老师"
        android:gravity="center"
        android:textColor="@color/gray"
        android:background="@drawable/role_bg"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_toStartOf="@+id/tv_name"
        android:layout_marginEnd="@dimen/margin_normal"
        />

    <TextView
        android:id="@+id/tv_recall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_name"
        android:textSize="10sp"
        android:text="撤回"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/blue_round_bg"
        android:layout_toStartOf="@+id/tv_role"
        android:layout_marginEnd="@dimen/margin_normal"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_below="@+id/tv_name"
        android:layout_alignEnd="@+id/tv_name"
        />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_toStartOf="@+id/iv_img"
        android:layout_alignTop="@+id/iv_img"
        android:layout_marginEnd="5dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <ImageView
        android:id="@+id/resend"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/iv_img"
        android:layout_alignTop="@+id/iv_img"
        android:src="@mipmap/warning"
        android:visibility="invisible"
        />
</RelativeLayout>