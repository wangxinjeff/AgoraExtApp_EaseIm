<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_normal">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/minSp"
        android:text="@string/nickname"
        android:layout_alignParentEnd="true"
        android:lines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/tv_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_name"
        android:textSize="@dimen/minSp"
        android:text="@string/student"
        android:theme="@style/normal_role_bg_style"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_toStartOf="@+id/tv_name"
        android:layout_marginEnd="@dimen/margin_normal"
        />

    <TextView
        android:id="@+id/tv_recall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_name"
        android:textSize="@dimen/minSp"
        android:text="@string/recall"
        android:theme="@style/mute_bg_style"
        android:layout_toStartOf="@+id/tv_role"
        android:layout_marginEnd="@dimen/margin_normal"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/minSp"
        android:text="@string/message"
        android:padding="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@drawable/send_msg_bg"
        android:layout_below="@+id/tv_name"
        android:layout_alignEnd="@+id/tv_name"
        android:textColor="@color/black"
        />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_toStartOf="@+id/tv_content"
        android:layout_alignTop="@+id/tv_content"
        android:layout_marginEnd="5dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
    <ImageView
        android:id="@+id/resend"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/tv_content"
        android:layout_alignTop="@+id/tv_content"
        android:src="@mipmap/warning"
        android:visibility="invisible"
        />


</RelativeLayout>